@model  IEnumerable<KamDMS.WebUI.Areas.Admin.Models.User.UserViewModel>

@{
    ViewBag.Title = "Список пользователей";
}


<div class="portlet box red">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-comments"></i>Заблокированные пользователи
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-scrollable">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th>Статус</th>
                        <th>Статус последней авторизации</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr><td colspan="5" class="text-center">Записи отсутствуют</td></tr>
                    }
                    else
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.FirstName</td>
                                <td>@u.MiddleName</td>
                                <td>@u.LastName</td>
                                <td><span class="label labek-sm label-warning">@u.IsDelete</span></td>
                                <td>@u.LastDateAuth</td>
                                <td>
                                    @using (Html.BeginForm("Unlock", "Account", new { id = @u.Id }))
                                    {
                                        <button class="btn btn-sm green fa fa-check" type="submit"></button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>