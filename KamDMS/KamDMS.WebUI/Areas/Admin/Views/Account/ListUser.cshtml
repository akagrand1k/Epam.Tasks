@model  IEnumerable<KamDMS.WebUI.Areas.Admin.Models.User.UserViewModel>

@{
    ViewBag.Title = "Список пользователей";
}


<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-comments"></i>Пользователи
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <a href="@Url.Action("Register","Account")" class="btn green">
                        Добавить
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="table-scrollable">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th>Отдел</th>
                        <th>Роль</th>
                        <th>Статус</th>
                        <th>Дата регистрации</th>
                        <th>Дата авторизации</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr><td colspan="9" class="text-center">Записи отсутствуют</td></tr>
                    }
                    else
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.FirstName</td>
                                <td>@u.MiddleName</td>
                                <td>@u.LastName</td>
                                <td>@u.BranchName</td>
                                <td>@u.RoleName</td>
                                <td><span class="label labek-sm label-success">@u.IsDelete</span></td>
                                <td>@u.DateCreate</td>
                                <td>@u.LastDateAuth</td>
                                <td>
                                    @using (Html.BeginForm("Ban", "Account", new { id = u.Id }))
                                    {
                                        @Html.ActionLink(" ", "ChangePassword", "Account", new { id = @u.Id }, new { @class = "btn btn-sm blue fa fa-key" })
                                        @Html.ActionLink(" ", "Edit", "Account", new { id = u.Id }, new { @class = "btn btn-sm green fa fa-edit" })
                                        
                                        <button class="btn btn-sm red fa fa-ban"></button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>