<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>Страница авторизации</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/themes/front1/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/themes/front1/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/themes/front1/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/themes/front1/assets/global/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="~/themes/front1/assets/admin/pages/css/login.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME STYLES -->
    <link href="~/themes/front1/assets/global/css/components-md.css" id="style_components" rel="stylesheet" type="text/css" />
    <link href="~/themes/front1/assets/global/css/plugins-md.css" rel="stylesheet" type="text/css" />
    <link href="~/themes/front1/assets/admin/layout/css/layout.css" rel="stylesheet" type="text/css" />
    <link href="~/themes/front1/assets/admin/layout/css/themes/default.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="~/themes/front1/assets/admin/layout/css/custom.css" rel="stylesheet" type="text/css" />
    <style>
        /* Styles for validation helpers
-----------------------------------------------------------*/
.field-validation-error {
    color: #f00;
    font-weight:bold;
}
 
.field-validation-valid {
    display: none;
}
 
.input-validation-error {
    border: 1px solid #f00;
    background-color: #fee;
}
 
.validation-summary-errors {
    font-weight: bold;
    color: #f00;
}
 
.validation-summary-valid {
    display: none;
}


    </style>
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="page-md login">
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="~/themes/front1/assets/admin/layout4/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            @Html.AntiForgeryToken()
            <h3 class="form-title">Авторизация</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Введите логин и пароль
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Логин</label>
                @Html.TextBoxFor(x=>x.UserName,new { @class = "form-control form-control-solid placeholder-no-fix", autocomplete = "off", placeholder = "Логин" ,name = "username" })
                @Html.ValidationMessageFor(x=>x.UserName)
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Пароль</label>
                @Html.PasswordFor(x=>x.Password,new { @class = "form-control form-control-solid placeholder-no-fix", autocomplete = "off" ,placeholder = "Пароль" ,name = "password" })
                @Html.ValidationMessageFor(x=>x.Password)
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-success uppercase">Войти</button>
            </div>
            @Html.ValidationSummary()
        }
        <!-- END LOGIN FORM -->
    </div>
    <div class="copyright">
        @DateTime.Now.Year © AdmKamyshin.
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
    <script src="~/themes/front1/assets/global/plugins/respond.min.js"></script>
    <script src="~/themes/front1/assets/global/plugins/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/themes/front1/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/global/plugins/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/global/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/global/plugins/jquery.cokie.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/themes/front1/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/themes/front1/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/admin/layout/scripts/layout.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/admin/layout/scripts/demo.js" type="text/javascript"></script>
    <script src="~/themes/front1/assets/admin/pages/scripts/login.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <script>
jQuery(document).ready(function() {
Metronic.init(); // init metronic core components
Layout.init(); // init current layout
Login.init();
Demo.init();
});
    </script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>